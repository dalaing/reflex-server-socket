                     , dependent-sum     >= 0.4    && < 0.5
                     , dependent-map     >= 0.2    && < 0.3
                     , reflex-basic-host >= 0.1    && < 0.2
                     , reflex-binary     >= 0.1    && < 0.2
  hs-source-dirs:      src
  ghc-options:         -Wall -O
  default-language:    Haskell2010

executable example-server
  main-is:             Server.hs
  build-depends:       base              >= 4.9    && < 4.13
                     , mtl               >= 2.2    && < 2.3
                     , binary            >= 0.8    && < 0.11
                     , bytestring        >= 0.10   && < 0.11
                     , containers        >= 0.5    && < 0.7
                     , network           >= 2.6    && < 3.1
                     , reflex            >= 0.5    && < 0.7
                     , reflex-basic-host >= 0.1    && < 0.2
                     , reflex-binary     >= 0.1    && < 0.2
                     , reflex-backend-socket
  hs-source-dirs:      example
  ghc-options:         -Wall -O -threaded
  default-language:    Haskell2010

