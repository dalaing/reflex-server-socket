  exposed-modules:     Reflex.Backend.Socket
                     , Reflex.Backend.Socket.Connect
                     , Reflex.Backend.Socket.Accept
  build-depends:       base              >= 4.9    && < 4.13
                     , binary            >= 0.8    && < 0.11
                     , bytestring        >= 0.10   && < 0.11
                     , containers        >= 0.5    && < 0.7
                     , lens              >= 4.15.4 && < 4.18
                     , mtl               >= 2.2    && < 2.3
                     , network           >= 2.6    && < 3.1
